
<% if @question.errors.present? %>
    $('<%= "#edit-question-#{@question.id}" %>').before("<%= j render 'errors' %>").hide().fadeIn('slow')
<% else %>
  $('<%= "#edit-question-#{@question.id}" %>').hide()
  $('<%= "#question_#{ @question.id }" %>').fadeOut('slow',function(){ $(this).replaceWith("<%= j render @question %>").fadeIn('slow'); });
<% end %>
