= div_for(answer, class: "col-centered col-xs-12 col-sm-10 col-lg-11 line-answer") do
    .media
      a.pull-left href="#"
        img.media-object alt="" src="https://cdn2.iconfinder.com/data/icons/website-icons/512/User_Avatar-512.png" /
      .media-body
        p = answer.body
        ul.list-unstyled.list-inline.media-detail.pull-left
          li
            i.fa
            = "#{show_username(answer)} wrote: #{time_ago_in_words(answer.created_at)} ago"
          li
            i.fa.fa-thumbs-up
            | 13
        ul.list-unstyled.list-inline.media-detail.pull-right
          li
            a href=""  Like
          li
            a href=""  Reply
          li
            = link_to 'Edit Answer', '', class: 'edit-answer-link', data: { answer_id: answer.id } if user_signed_in? && current_user.author_of?(answer)
          li
            = link_to 'Delete Answer', answer_path(answer), method: :delete, remote: true if user_signed_in? && current_user.author_of?(answer)

    = form_for answer, remote: true, html: { id: "edit-answer-#{ answer.id }" } do |f|
      h4.pull-left.media-heading
        | Edit Answer
      fieldset
        .row
          .form-group.col-xs-12.col-sm-12.col-lg-12
            = f.label :body, class: 'hidden'
            = f.text_area :body, class: "form-control", placeholder: "Your Answer", rows: 5
      button.btn.btn-normal.pull-left[type="submit"]
        | Submit
