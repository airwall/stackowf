<% if @answer.errors.present? %>
  $('.answers-errors').append("<%= j render 'errors' %>").hide().fadeIn('slow')
<% else %>
  $('#answers').append("<%= j render partial: 'answer', locals: {answer: @answer} %>");
  $("#answer_<%= @answer.id %>").hide().fadeIn('slow');
  $('.answer-form').val('');
  $('.nested-fields').hide();
<% end %>
